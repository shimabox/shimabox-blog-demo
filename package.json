{
  "name": "hono-cloudflare-blog",
  "type": "module",
  "scripts": {
    "dev": "tsx --watch dev-server.tsx",
    "deploy": "wrangler pages deploy ./public",
    "format": "biome format --write .",
    "lint": "biome lint .",
    "check": "biome check . && tsc --noEmit",
    "check:fix": "biome check --write .",
    "typecheck": "tsc --noEmit",
    "sync": "tsx scripts/sync.ts",
    "sync:delete": "tsx scripts/sync.ts --delete",
    "generate-ogp": "tsx scripts/generate-ogp.ts",
    "generate-ogp:force": "tsx scripts/generate-ogp.ts --force",
    "log:prod": "npx wrangler tail"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.8",
    "@resvg/resvg-js": "^2.6.2",
    "hono": "^4.11.3",
    "marked": "^15.0.12",
    "node-emoji": "^2.2.0",
    "satori": "^0.12.2"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@cloudflare/workers-types": "^4.20260103.0",
    "@types/livereload": "^0.9.5",
    "livereload": "^0.10.3",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "wrangler": "^4.54.0"
  },
  "version": "1.0.0",
  "description": "Hono + Cloudflare Pages + R2 blog template",
  "keywords": ["hono", "cloudflare", "blog", "r2"],
  "license": "MIT"
}
